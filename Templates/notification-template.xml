<notifications>
    <!-- 
        Time, in milliseconds, to wait between he notification send request.
        If no value is specified, then 60000 (1 minute) will be used. Any
        value lower than 30000 (30 seconds) will be set to 30000.
    -->
    <waittime></waittime>
    <notification>
        <url></url>
        <!--
            What events will trigger the notificaton.
            Values:
                Change
                Create
                Delete
                Rename
        -->        
        <method></method>
        <!--
            What events will trigger the notificaton.
            Values:
                Change
                Create
                Delete
                Rename
        -->
        <triggers>
            <trigger></trigger>
        </triggers>
        <data>
            <header>
                    <name></name>
                    <value></value>
            <header>
            <!--
                Placeholders:
                    [message] - messsage of the change
            -->
            <body></body>
            <!--
                The type of request.
                Values:
                    JSON (default)
                    XML
            -->
            <type></type>            
        </data>
    </notification>
</notifications>